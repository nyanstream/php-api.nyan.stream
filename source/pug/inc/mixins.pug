mixin headerBrand(subTitle)
	div.brand
		div.brand__logo
		a.brand__text(href='/' rel='home')
			span.brand__text--title #{title}
			span.brand__text--subtitle #{subTitle}

mixin libFromCDN(lib, hash)
	script(src=`https://cdnjs.cloudflare.com/ajax/libs/${lib}` crossorigin='anonymous' integrity=`${hash}` defer)
